{
    "name": "project-managment-pulse",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "run-p type-check \"build-only {@}\" --",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc --build --force",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "format": "prettier --write src/",
        "supabase:init": "supabase init",
        "supabase:login": "supabase login",
        "supabase:logout": "supabase logout",
        "supabase:link": "supabase link  --project-ref $SUPABASE_PROJECT_ID",
        "db:migrate:new": "supabase migration new",
        "db:reset": "supabase db reset --linked",
        "db:seed": "node --env-file=.env database/seed.js",
        "subabase:generate-types": "npx supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > database/types.ts"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.45.6",
        "@tanstack/vue-table": "^8.20.5",
        "@vueuse/core": "^11.1.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "dotenv": "^16.4.5",
        "iconify-icon": "^2.1.0",
        "lucide-vue-next": "^0.453.0",
        "pinia": "^2.2.4",
        "radix-vue": "^1.9.8",
        "tailwind-merge": "^2.5.4",
        "tailwindcss-animate": "^1.0.7",
        "vue": "^3.5.12",
        "vue-router": "^4.4.5"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.1.0",
        "@rushstack/eslint-patch": "^1.10.4",
        "@tsconfig/node20": "^20.1.4",
        "@types/node": "^22.8.1",
        "@vitejs/plugin-vue": "^5.1.4",
        "@vue/eslint-config-prettier": "^10.1.0",
        "@vue/eslint-config-typescript": "^14.1.3",
        "@vue/tsconfig": "^0.5.1",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.13.0",
        "eslint-plugin-vue": "^9.29.1",
        "npm-run-all2": "^7.0.1",
        "prettier": "^3.3.3",
        "supabase": "^1.207.9",
        "tailwindcss": "^3.4.14",
        "typescript": "~5.4.0",
        "unplugin-auto-import": "^0.18.3",
        "unplugin-vue-components": "^0.27.4",
        "unplugin-vue-router": "^0.10.8",
        "vite": "^5.4.10",
        "vue-tsc": "^2.0.21"
    }
}
